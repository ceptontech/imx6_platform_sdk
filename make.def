#make.def. please replace following defines if needed
# For example, if using ARM tools
#CC = armcc
#AS = armasm
#AR = armar
#LN = armlink

# The following are defines for the GCC tool chain
CC= arm-none-eabi-gcc
AS = arm-none-eabi-as
AR = arm-none-eabi-ar
LN = arm-none-eabi-ld

IMAGENAME = $(TARGET)$(BOARD)-$(TEST)-sdk

OUTPUT_BIN = $(PROJ_OUT)/bin/$(IMAGENAME).bin
OUTPUT_TXT = $(PROJ_OUT)/bin/$(IMAGENAME).txt
OUTPUT_ELF = $(PROJ_OUT)/bin/$(IMAGENAME).elf
INIT_FILE = $(PROJ_DIR)/src/init/main.c $(PROJ_DIR)/src/init/vectors.S
INIT_FILE += $(PROJ_DIR)/src/init/sys.c $(PROJ_DIR)/src/init/version.c

CP = cp
RM = rm -rf
MKDIR = mkdir -p
MAKE = make
#BOARD_UC=`echo $(BOARD) | tr [:lower:] [:upper:]`

ifeq "$(TARGET)" "mx53"
C_DEFINES +=-DMX53
CPU	=cortex-a8
ifeq "$(BOARD)" "evk"
C_DEFINES +=-DMX53_EVK
endif
ifeq "$(BOARD)" "ard"
C_DEFINES +=-DMX53_ARD
endif
ifeq "$(BOARD)" "cpu2"
C_DEFINES +=-DMX53_CPU2
endif
ifeq "$(BOARD)" "lcb"
C_DEFINES +=-DMX53_LCB
endif
ifeq "$(BOARD)" "smd"
C_DEFINES +=-DMX53_SMD
endif
endif

ifeq "$(TARGET)" "mx61"
C_DEFINES +=-DMX61
CPU	=cortex-a9
INIT_FILE += $(PROJ_DIR)/src/cortex_a9/gic.s $(PROJ_DIR)/src/$(TARGET)/startup.s
INIT_FILE += $(PROJ_DIR)/src/cortex_a9/cortexA9.s
ifeq "$(BOARD)" "ard"
C_DEFINES +=-DMX61_ARD
endif
ifeq "$(BOARD)" "smd"
C_DEFINES +=-DMX61_SMD
endif
ifeq "$(BOARD)" "evb"
C_DEFINES +=-DMX61_EVB
endif
ifeq "$(BOARD)" "qsb"
C_DEFINES +=-DMX61_QSB
endif
endif

ifeq "$(BOARD_VERSION)" "2"
C_DEFINES +=-DBOARD_VERSION2
endif
ifeq "$(BOARD_VERSION)" "1"
C_DEFINES +=-DBOARD_VERSION1
endif

LD_FLAGS := $(DEBUG_FLAGS) $(THUMB_FLAGS) -nostartfiles
LD_FLAGS += -T $(PROJ_DIR)/src/$(TARGET)/$(TARGET).ld

C_DEFINES +=-DSTANDALONE -DSDK_TEST=$(TEST)_test
# enables all warnings and treat them as errors except those preceded with -Wno-
C_FLAGS_WARNINGS = -Wall -Werror -Wno-unused-function -fdiagnostics-show-option
C_FLAGS 		= -mcpu=$(CPU) $(C_FLAGS_WARNINGS) -mapcs -g -O0 -ffunction-sections -fdata-sections -fno-exceptions
C_INCLUDES 	= -I$(PROJ_DIR) -I$(PROJ_DIR)/include -I$(PROJ_DIR)/src/include -I$(PROJ_DIR)/src/include/$(TARGET)/ -I. -I../inc

A_FLAGS 		=
A_INCLUDES 	+=  -I$(PROJ_DIR) -I$(PROJ_DIR)/include -I$(PROJ_DIR)/src/include -I$(PROJ_DIR)/src/include/$(TARGET)/ -I.
A_DEFINES 	=
